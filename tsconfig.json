{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react-native",
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "noEmit": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@screens": ["src/screens"],
      "@components": ["src/components"],
      "@utils": ["src/utils"],
      "@hooks": ["src/hooks"],
      "@navigation": ["src/navigation"],
      "@config": ["src/config"],
      "@assets": ["assets"]
    }
  }
}
